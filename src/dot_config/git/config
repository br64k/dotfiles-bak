[user]
  name = Roman Brodsky
  email = roman@br64k.dev
  signingkey = ~/.ssh/id_ed25519.pub

[init]
  defaultBranch = main

[gpg]
  format = ssh

[commit]
  gpgsign = true

[alias]
  cmp = "!f() { git add -A && git commit -m \"$@\" && git push; }; f"

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  true-color = always
  side-by-side = true
  navigate = true
  light = false
  syntax-theme = gruvbox-dark

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[includeIf "gitdir:~/Work/"]
  path = ~/Work/.gitconfig

